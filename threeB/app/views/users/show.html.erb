  <tbody>
    <tr>
      <td>User ID:</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @email_first_letter %>****<%= @email_provider %></td>
    </tr>
    <tr>
      <td>First Name</td>
      <td><%= @user.first_name %></td>
    </tr>
    <tr>
      <td>Last name</td>
      <td><%= @user.last_name %></td>
    </tr>
    <tr>
      <td>Date of Birth:</td>
      <td><%= @user.date_of_birth %></td>
    </tr>
        <tr>
      <td>Location:</td>
      <td><%= @user.location %></td>
